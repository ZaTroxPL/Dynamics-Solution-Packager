<Window x:Class="Dynamics_Solution_Mover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamics_Solution_Mover"
        mc:Ignorable="d"
        Title="Solution Migration" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
            <Button x:Name="Start" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Start_Click" Padding="10,5,10,5" Margin="5,0,5,0"/>
            <Button x:Name="PACInstaller" Content="Install PAC" VerticalAlignment="Top" Padding="10,5,10,5" Margin="5,0,5,0" HorizontalAlignment="Center" Click="PACInstaller_Click" Visibility="Collapsed"/>
        </StackPanel>
        <StackPanel  Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,5">
            <Button x:Name="Login" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="10,5,10,5" Margin="5,0,5,0" Visibility="Visible" Click="Login_Click"/>
        </StackPanel>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" Name="Output" Padding="10,10,10,8" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="0,5,0,10" HorizontalScrollBarVisibility="Auto" FontFamily="Cascadia Mono"/>
    </Grid>
</Window>
